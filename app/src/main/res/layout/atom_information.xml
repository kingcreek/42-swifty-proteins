<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="285dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_atomic_mass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atomic Mass: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_boil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boil: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_density"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Density: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_discovered_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discovered By: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_melt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Melt: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_molar_heat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Molar Heat: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_named_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Named By: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Period: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_phase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phase: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_symbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symbol: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
